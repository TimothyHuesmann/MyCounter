<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.timothyhuesmann.mycounter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainVC"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuVC"
            android:label="@string/title_activity_menu_vc" />
        <activity
            android:name=".PersonalStatsVC"
            android:label="@string/title_activity_personal_stats_vc" />
        <activity
            android:name=".CounterWithVC"
            android:label="@string/title_activity_counter_with_vc" />
        <activity
            android:name=".CounterAgainstVC"
            android:label="@string/title_activity_counter_against_vc"></activity>
    </application>

</manifest>
