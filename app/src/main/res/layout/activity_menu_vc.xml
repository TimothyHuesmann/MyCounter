<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.timothyhuesmann.mycounter.MenuVC">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Counter Against Champion"
        android:id="@+id/counterAgainstButton"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/welcomeTextField"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Counter With Teammate"
        android:id="@+id/counterWithButton"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/counterAgainstButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Statistics"
        android:id="@+id/statsButton"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/counterWithButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/logoutButton"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/statsButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome,"
        android:id="@+id/welcomeTextField"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
